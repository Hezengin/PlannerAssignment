<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="PlannerAssignment.MVVM.MapPage"
             Shell.BackgroundColor="LimeGreen"
             Shell.TitleColor="White"
             Title="MapPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout x:Name="stacklayout" Grid.Row="1">
            <maps:Map x:Name="map" MapType="Hybrid"/>
        </StackLayout>

        <VerticalStackLayout Grid.Row="2">
            <HorizontalStackLayout Margin="20">
                <Label Text="Time of arrival at station:" FontSize="16" FontAttributes="Bold"/>
                <Label x:Name="DistanceLabel" Margin="10,0,0,0" FontSize="16" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="3">
            <HorizontalStackLayout Margin="20">
                <Label Text="Travel time: " FontSize="16" FontAttributes="Bold"/>
                <Label x:Name="TravelLabel" Margin="10,0,0,0" FontSize="16" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>